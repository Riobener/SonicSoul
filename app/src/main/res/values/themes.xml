<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SonicSoul" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/theme_black</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/theme_light</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/theme_light</item>
        <item name="colorSecondaryVariant">@color/theme_light</item>
        <item name="colorOnSecondary">@color/theme_gray</item>
        <item name="colorAccent">@color/theme_light</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>

        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.SonicSoul.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.SonicSoul.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.SonicSoul.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="RippleEffect">
        <item name="colorControlHighlight">@color/theme_white</item>
        <item name="android:background">?selectableItemBackground</item>
    </style>

    <style name="circleImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="ToolBarStyle" parent="Theme.AppCompat">
        <item name="android:textColorPrimary">@color/theme_white</item>
        <item name="android:textColorSecondary">@color/theme_white</item>
        <item name="actionMenuTextColor">@color/theme_white</item>
    </style>

</resources>

